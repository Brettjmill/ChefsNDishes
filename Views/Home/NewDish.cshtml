@model Dish

<h1>Add a Dish!</h1>
<br>
<a href="/dishes">Home</a>
<hr>

<div>
    <form asp-controller="Home" asp-action="CreateDish" class="shadow p-3 rounded" method="POST">
    <div class="form-group">
      <label asp-for="DishName"></label>
      <span asp-validation-for="DishName" class="text-danger font-weight-bold"></span>
      <input asp-for="DishName" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Calories"></label>
      <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
      <input asp-for="Calories" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Description"></label>
      <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
      <textarea asp-for="Description" class="form-control" rows="8"></textarea>
    </div>

    <div class="form-group">
      <label asp-for="Tastiness"></label>
      <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
      <select asp-for="Tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>

    <div class="form-group">
      <label asp-for="ChefId"></label>
      <span asp-validation-for="ChefId" class="text-danger font-weight-bold"></span>
      <select asp-for="ChefId">
        @foreach(Chef chef in ViewBag.AllChefs)
        {
            <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
        }
      </select>
    </div>

    <button class="btn btn-outline-success">Add Dish</button>
  </form>
</div>